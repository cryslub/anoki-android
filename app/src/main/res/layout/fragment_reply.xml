<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_smoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_cover_mint_small"
                android:id="@+id/cover"
                />
            <com.anoki.common.CircleImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/picture"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_large"
                android:alpha=".5"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기도응답"
                    android:background="@color/medium_turquoise"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"

                    android:id="@+id/response"
                    android:layout_marginTop="-1dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/medium_turquoise"
                    android:id="@+id/name"
                    android:layout_marginLeft="5dp"
                    android:text="최영범"
                    android:textStyle="bold"
                    android:textSize="18sp"/>



            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/text"
                android:textColor="@color/strong"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/image"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="3월 24일 오전 10:00"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textSize="11sp"
                android:id="@+id/time"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>