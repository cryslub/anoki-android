<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.anoki.CreateAccountActivity"
    android:orientation="vertical">

    <TextView android:text="아노키계정으로 사용할 이메일 주소와 비밀번호를 입력해주세요." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        >

        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="com.anoki.EditTextFragment"
            android:id="@+id/fragment"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:hint ="이메일"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 입력한 이메일로 가입 완료 메일이 발송됩니다. 자주 사용하는 이메일 주소를 입력해주세요."
        android:layout_margin="10dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="비밀번호"
            android:id="@+id/pass"
            android:maxLength="40"
            android:inputType="textPassword"
            style="@style/EditText"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="비밀번호 확인"
            android:id="@+id/confirm"
            android:maxLength="40"
            android:inputType="textPassword"
            style="@style/EditText"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 비밀번호는 8 ~ 16 자의 영문 대소문자, 숫자, 특수문자를 조합하여 설정해주세요."
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 안전을 위해 자주 사용했거나 쉬운 비밀번호가 아닌 새 비밀번호를 등록하고 주기적으로 변경해주세요."
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:onClick="confirm"
        style="@style/ColorButton"/>
</LinearLayout>
