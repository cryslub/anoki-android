<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anoki1.team.TeamLeaderActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="청지기(2)"
            android:textSize="9sp"
            android:paddingLeft="5dp"
            android:layout_marginTop="20dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/leader_list">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="청지기 임명"
            style="@style/ColorButton"
            android:id="@+id/leader"
            android:layout_margin="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/week"
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="청지기는 무엇을 할 수 있나요?"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 메뉴에서 청지기의 권환을 설정할 수 있습니다."
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:text="멤버들의 권한 설정 바로가기"
            android:background="@drawable/box_chacoal"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/auth"
            />


    </LinearLayout>

</LinearLayout>
