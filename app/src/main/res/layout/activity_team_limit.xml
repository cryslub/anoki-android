<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anoki1.team.TeamLimitActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainMessage"
            android:text="그룹명"
            android:id="@+id/name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그룹 인원을 설정해 주세요"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#dddddd"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:id="@+id/container"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/thirty"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="30명 이하"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                style="@style/MainText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료"
                android:textStyle="bold"
                style="@style/MainText"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            style="@style/Line"/>

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fifty"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="50명 이하"
                android:layout_marginLeft="20dp"
                style="@style/MainText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 2,000 달란트" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연 2,0000 달란트" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            style="@style/Line"/>

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hundred"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100명 이하"
                android:layout_marginLeft="20dp"
                style="@style/MainText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 4,000 달란트" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연 4,00000 달란트" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            style="@style/Line"/>

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/five_hundred"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="500명 이하"
                android:layout_marginLeft="20dp"
                style="@style/MainText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 7,000 달란트" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연 7,00000 달란트" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            style="@style/Line"/>

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thousand"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1,000명 이하"
                android:layout_marginLeft="20dp"
                style="@style/MainText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 10,000 달란트" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연 100,000 달란트" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="10dp"
            style="@style/Line"/>

        <LinearLayout
            android:layout_width="match_parent"
            style="@style/TeamLimit">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unlimited"
                android:onClick="onRadioButtonClicked"
                android:button="@drawable/custom_drawable_radio"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="무제한"
                android:layout_marginLeft="20dp"
                style="@style/MainText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 20,000 달란트" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연 200,000 달란트" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
