<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anoki.DalantActivity"
    android:orientation="vertical">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/mine_shaft"
                        android:gravity="center"
                        android:padding="40dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_money_white">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 달란트"
                            android:textColor="@android:color/white"
                            android:layout_marginTop="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,000"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/medium_turquoise"
                            android:background="@drawable/box_white_mymoney"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:id="@+id/dalant"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아노키 계정으로 충전한 내역입니다."
                        android:paddingLeft="15dp"
                        android:paddingTop="25dp"
                        android:paddingBottom="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        style="@style/Line"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/charge_list">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/use_list">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ColorButton"
        android:text="달란트 충전"
        android:onClick="charge"
        />

</LinearLayout>
