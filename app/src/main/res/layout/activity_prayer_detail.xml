<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/profile">

                <com.anoki.common.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_black_48dp"
                    android:alpha=".5"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:id="@+id/name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:id="@+id/date"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/text"
                android:layout_margin="10dp"
                android:text="기도제목"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/media_container"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#aaaaaa"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#dddddd"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_send_black_18dp"
                    android:alpha=".5"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/pray_count"
                    android:text="기도 20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat_bubble_outline_black_18dp"
                    android:alpha=".5"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/reply_count"
                    android:text="댓글 3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/button_container">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:text="기도"
                    android:textSize="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/pray"
                    android:background="#dddddd"
                    android:layout_margin="5dp"
                    android:onClick="pray"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:textSize="10sp"

                    android:text="담기"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/scrap"
                    android:background="#dddddd"
                    android:layout_margin="5dp"
                    android:onClick="scrap"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:textSize="10sp"

                    android:text="기도응답"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/response"
                    android:background="#dddddd"
                    android:layout_margin="5dp"
                    android:onClick="response"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:textSize="10sp"

                    android:text="기도완료"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/complete"
                    android:background="#dddddd"
                    android:layout_margin="5dp"
                    android:onClick="complete"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#444444"
                android:id="@+id/response_bar"
                android:gravity="center_vertical"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="기도응답이 2건 있습니다."
                    android:background="#444444"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/response_count"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/reply_list"
                android:visibility="visible"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:id="@+id/reply">

                <com.anoki.common.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/my_picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_black_36dp"
                    android:alpha=".5"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주인만 보기"
                        android:textSize="12sp"
                        android:id="@+id/pub"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="댓글을 달아 보세요."
                            android:textSize="12sp"
                            android:id="@+id/reply_text"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_photo_black_24dp"
                            android:layout_gravity="center_vertical"
                            android:alpha=".5"
                            android:id="@+id/photo"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_done_black_24dp"
                            android:layout_gravity="center_vertical"
                            android:alpha=".5"
                            android:id="@+id/done"/>
                    </LinearLayout>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:id="@+id/media_list">

                    </GridLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
