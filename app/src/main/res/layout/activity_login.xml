<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.anoki.user.LoginActivity"
    android:orientation="vertical"
    android:background="@color/medium_turquoise">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="아노키계정(이메일)"
        android:id="@+id/account"
        android:inputType="textEmailAddress"
        android:background="@drawable/gray_border"
        android:padding="10dp"
        android:imeOptions="actionDone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="비밀번호"
        android:id="@+id/pass"

        android:inputType="textPassword"
        android:layout_marginTop="-1dp"
        android:background="@drawable/gray_border"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_marginTop="10dp"
        style="@style/ColorButton"
        android:background="@drawable/box_chacoal"
        android:id="@+id/login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호를 잊으셨나요?"
            android:id="@+id/forgot"
            android:onClick="forgot"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp" />
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@android:color/white"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로운 아노키 계정 만들기"
            android:layout_marginBottom="20dp"
            style="@style/ColorButton"
            android:background="@drawable/box_darkmint"
            android:id="@+id/signUp"/>
    </LinearLayout>
</LinearLayout>
