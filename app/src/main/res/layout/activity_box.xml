<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anoki.BoxActivity"
    android:orientation="vertical">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:id="@+id/showPeriod"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_drop_down_white_24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="기간설정"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/period"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/gray_border">

                            <TextView
                                android:text="1개월"
                                android:id="@+id/oneMonth"
                                style="@style/Period"
                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="3개월"
                                android:id="@+id/threeMonth"
                                style="@style/Period"

                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="6개월"
                                android:id="@+id/sixMonth"
                                style="@style/Period"

                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="1년"
                                android:id="@+id/oneYear"
                                style="@style/Period"

                                />



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/start"
                                android:text="2015-5-30"
                                style="@style/BoxDate"
                               />
                            <ImageView
                                android:id="@+id/calendarStart"
                                style="@style/Calendar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="~"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/end"
                                android:gravity="center"
                                style="@style/BoxDate"
                                android:layout_marginLeft="5dp"
                                />
                            <ImageView
                                android:id="@+id/calendarEnd"
                                style="@style/Calendar"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#aaaaaa"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp" />

                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/completed_list">
                        </android.support.v7.widget.RecyclerView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/friend"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:id="@+id/showFriendPeriod"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_drop_down_white_24dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="기간설정"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/friend_period"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/gray_border">

                            <TextView
                                android:text="1개월"
                                android:id="@+id/friendOneMonth"
                                style="@style/Period"

                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="3개월"
                                android:id="@+id/friendThreeMonth"
                                style="@style/Period"

                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="6개월"
                                android:id="@+id/friendSixMonth"
                                style="@style/Period"

                                />
                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#aaaaaa"/>
                            <TextView
                                android:text="1년"
                                android:id="@+id/friendOneYear"
                                style="@style/Period"
                                />



                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:id="@+id/friend_start"
                                style="@style/BoxDate"
                                />
                            <ImageView
                                android:id="@+id/calendarFriendStart"
                                style="@style/BoxDate"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"

                                android:text="~"/>
                            <TextView
                                android:id="@+id/friend_end"
                                style="@style/BoxDate"

                                />
                            <ImageView
                                android:id="@+id/calendarFriendEnd"
                                style="@style/BoxDate"
                                />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#aaaaaa"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/scraped_list">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>
