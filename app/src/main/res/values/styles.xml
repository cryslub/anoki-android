<resources
    xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/AnokiActionBar</item>
        <item name="actionBarStyle">@style/AnokiActionBar</item>
        <item name="android:windowContentOverlay" tools:ignore="NewApi">@null</item>

        <item name="colorControlNormal">@color/medium_turquoise</item>
        <item name="colorControlActivated">@color/medium_turquoise</item>
        <item name="colorControlHighlight">@color/medium_turquoise</item>

    </style>

    <style name="AnokiActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/baltic_sea</item>
        <item name="background" >@color/baltic_sea</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/AnokiActionBarTitleText</item>
        <item name="titleTextStyle">@style/AnokiActionBarTitleText</item>
        <item name="elevation">0dp</item>

    </style>

    <style name="AnokiActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:textStyle" tools:ignore="NewApi">normal</item>
    </style>


    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:textStyle" tools:ignore="NewApi">normal</item>
        <item name="android:textSize" tools:ignore="NewApi">0sp</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">#54c9dc</item>
        <item name="background" >@color/medium_turquoise</item>
        <item name="colorPrimary">#54c9dc</item>
        <item name="colorPrimaryDark">#54c9dc</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay" tools:ignore="NewApi">@null</item>
        <item name="colorControlNormal">@color/medium_turquoise</item>
        <item name="colorControlActivated">@color/medium_turquoise</item>
        <item name="colorControlHighlight">@color/medium_turquoise</item>

    </style>


    <style name="Header" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/baltic_sea</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>


    <style name="MainMessage" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/medium_turquoise</item>

    </style>

    <style name="ColorButton" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/box_mint</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditText" >
        <item name="android:background">@drawable/gray_border</item>
        <item name="android:padding">5dp</item>
        <item name="android:height">35dp</item>
    </style>


    <style name="Period" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/java</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="BoxDate" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/baltic_sea</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strong</item>
    </style>

    <style name="ChargeItem">
        <item name="android:layout_margin">18dp</item>
    </style>

    <style name="TeamLimit">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>


    <style name="Line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#dddddd</item>
    </style>

    <style name="Calendar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_calendar</item>
        <item name="android:background">@color/java</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>



    <color name="medium_turquoise">#45c9dc</color>
    <color name="baltic_sea">#3d3d3d</color>
    <color name="white_smoke">#f2f3f3</color>
    <color name="yellow">#FFFF00</color>
    <color name="week">#aaaaaa</color>
    <color name="strong">#555555</color>
    <color name="mine_shaft">#393c42</color>
    <color name="cinnabar">#e5553a</color>
    <color name="java">#1D8d9f</color>
    <color name="golden_yellow">#fadf02</color>

</resources>
