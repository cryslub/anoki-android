<resources
    xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/AnokiActionBar</item>
        <item name="actionBarStyle">@style/AnokiActionBar</item>
        <item name="android:windowContentOverlay" tools:ignore="NewApi">@null</item>

        <item name="colorControlNormal">@color/medium_turquoise</item>
        <item name="colorControlActivated">@color/medium_turquoise</item>
        <item name="colorControlHighlight">@color/medium_turquoise</item>

    </style>

    <style name="AnokiActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/baltic_sea</item>
        <item name="background" >@color/baltic_sea</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/AnokiActionBarTitleText</item>
        <item name="titleTextStyle">@style/AnokiActionBarTitleText</item>
        <item name="elevation">0dp</item>

    </style>

    <style name="AnokiActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:textStyle" tools:ignore="NewApi">normal</item>
    </style>


    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:textStyle" tools:ignore="NewApi">normal</item>
        <item name="android:textSize" tools:ignore="NewApi">25sp</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">#54c9dc</item>
        <item name="background" >@color/medium_turquoise</item>
        <item name="colorPrimary">#54c9dc</item>
        <item name="colorPrimaryDark">#54c9dc</item>
        <item name="android:titleTextStyle" tools:ignore="NewApi">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay" tools:ignore="NewApi">@null</item>
        <item name="colorControlNormal">@color/medium_turquoise</item>
        <item name="colorControlActivated">@color/medium_turquoise</item>
        <item name="colorControlHighlight">@color/medium_turquoise</item>

    </style>


    <style name="Header" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#0099CC</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="MainMessage" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ColorButton" >
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/medium_turquoise</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <color name="medium_turquoise">#54c9dc</color>
    <color name="baltic_sea">#3d3d3d</color>
    <color name="white_smoke">#f2f3f3</color>
    <color name="yellow">#FFFF00</color>
    <color name="week">#aaaaaa</color>
    <color name="mine_shaft">#393c42</color>
    <color name="flamingo">#e15940</color>

</resources>
