<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anoki" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".InputPhoneNumberActivity"
            android:label="@string/title_activity_input_phone_number" >
        </activity>
        <activity
            android:name=".InputAuthCodeActivity"
            android:label="@string/title_activity_input_auth_code" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".SetNameActivity"
            android:label="@string/title_activity_set_name" >
        </activity>
        <activity
            android:name=".RecentActivity"
            android:label="Anoki"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".AlarmListActivity"
            android:label="최근알림" >
        </activity>
        <activity
            android:name=".MessageListActivity"
            android:label="쪽지" >
        </activity>
        <activity
            android:name=".WriteActivity"
            android:label="글쓰기" >
        </activity>
        <activity
            android:name=".MeTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".RecentTabActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name=".PrayerDetailActivity"
            android:label="@string/title_activity_prayer_detail" >
        </activity>
        <activity
            android:name=".GalleryActivity"
            android:label="미디어 선택" >
        </activity>
    </application>

</manifest>
